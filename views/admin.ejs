            </div>
        </form>
      </section>
            <section id="update" class="formupdate">
        <form name="update">
          <legend>‚úèÔ∏è Modificaci√≥n de datos ‚úèÔ∏è</legend>
            <input type="hidden" id="idUpdate" name="idUpdate">
            <div>
                <label for="rutaUpdate">Ruta (URL)</label>
                <input type="text" id="rutaUpdate" name="rutaUpdate">
            </div>
                        <div>
                <label for="lugarUpdate">Lugar</label>
                <input type="text" id="lugarUpdate" name="lugarUpdate">
            </div>
                        <div>
                <label for="nombreUpdate">Nombre</label>
                <input type="text" id="nombreUpdate" name="nombreUpdate">
            </div>
                        <div>
                <label for="descripcionUpdate">Descripcion</label>
                <input type="text" id="descripcionUpdate" name="descripcionUpdate">
            </div>
            <div>
                <label for="precioUpdate">Precio</label>
                <input type="text" id="precioUpdate" name="precioUpdate">
            </div>
                        <div>
                <label for="imgUpdate">Ruta de la imagen</label>
                <input type="text" id="imgUpdate" name="imgUpdate">
            </div>
            <div id="buttons">
                <button type="submit">Aceptar</button>
                <button type="reset">Borrar</button>

            </div>
        </form>
      </section>
      <section>
        <table>
          <thead>
            <tr>
              <th>Ruta</th>
              <th>Lugar</th>
              <th>Nombre</th>
              <th>Precio</th>
              <th>edit.</th>
              <th>elim.</th>
            </tr>
          </thead>
          <% jsonDatos.forEach(item => { %>
          <tr>
            <td><%= item.ruta %></td>
            <td><%= item.lugar %></td>
            <td><%= item.nombre %></td>
            <td><%= item.precio %></td>
            <td><button onclick="editarDestino('<%= JSON.stringify(item) %>')"><img src="icons/pencil.png"></button></td>
            <td><button onclick="borrarDestino('<%= item.id %>')"><img src="icons/delete.png"></button></td>
          </tr>
          <% }) %>
        </table>
      </section>
    </main>
  
  </body>

</html>
